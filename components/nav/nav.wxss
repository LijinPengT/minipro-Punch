.navbar {
  width: 100vw;
  background-color: #fff;
  position: fixed;
  z-index: 4;
}
.title-container {
  padding-top: 20px;
  height: 54px;
  display: flex;
  align-items: center;
  position: relative;
}

.capsule {
  margin: 30px;
  height: 32px;
  border: 1px solid #777;
  border-radius: 16px;
  display: flex;
  align-items: center;
}

.capsule > view {
  width: 32px;
  height: 60%;
  position: relative;
  text-align: center;
}

.capsule > view:nth-child(2) {
  border-left: 1px solid #777;  
}

.capsule image {
  width: 60%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}

.title {
  color: #000;
  position: absolute;
  left: 104px;
  right: 104px;
  font-size: 18px;
  font-weight: 900;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
