/* pages/mycenter/help/help.wxss */
.bgimg {
  position: absolute;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  z-index: -1;
}
.head {
  padding:30px 20px 0;
  color: #fff;
  font-family: Microsoft YaHei;
  font-size: 42rpx;
}
.section {
  height: 600rpx;
  margin: 5px 20px 0;
  padding: 40px;
  position: relative;
  border: 1px solid rgba(102, 102, 102, 0.658);
  border-radius: 30rpx;
  background: #707070;
}
.textarea {
  height: 100%;
  background: linear-gradient(#707070 98%, #E4E4E4 0, #E4E4E4 1%);
  background-size: 100% 50rpx;
}
.submit {
  bottom: -5rem;
  width: 300rpx;
  height: 100rpx;
  border-radius: 50rpx;
}