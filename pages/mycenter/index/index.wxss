/* ------背景图片 */
.user{
  position: relative;
  overflow: hidden;
}
.user-bg{
  width: 750rpx;
  height: 400rpx;
  object-fit: none;
  box-shadow: -3px 3px 6px -3px black,
               6px 0 6px -3px black;
}
.user-head{
  box-sizing: border-box;
  box-shadow: 3px 3px 6px -3px black;
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
  /* 居中 */
  position: absolute;
  left: 50%;transform: translate(-50%,-70%);
  top: 50%;
  /* 居中 */
  background: #fff;
}
