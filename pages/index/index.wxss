/**index.wxss**/
page {
  background: rgba(238,238,238,1);
  padding-top: 40rpx;
}
.bgBar {
  margin: 28rpx 0;
  background: #fff;
  box-sizing: border-box;
  padding: 35rpx 0rpx 35rpx 0rpx;
  font-size: 24px;
  border-radius: 10px;
  width: 90%;
  position: relative;
  left: 50%;transform: translateX(-50%);
  text-align: center;
  box-shadow: 3px 3px 3px -3px rgb(160, 158, 158);
}
.punchedBar {
  box-sizing: border-box;
  padding: 35rpx 0rpx;
  margin:50rpx 30rpx 0rpx 30rpx;
  max-height: 135rpx;
  
  position: relative;
  text-align: center;
}
.punchedBar::before {
  content: '成功PUNCHED';
  color: #70707025;
  margin: 0;
  padding: 10rpx 0;
  margin: -50rpx -80rpx 0 -70rpx;
  font-size: 95rpx;
  position: absolute;
  width: 100%;
  z-index: -1;
  background: #70707025;
}
.setting>button{
  flex:1;
}
text{
  max-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 1;
  text-align: center;
  display: inline-block;
  width: 80%;
  font-size: 38rpx;
  font-weight: 1000;
}
/* -----弹出框---- */
.new{
  border: 1px solid rgb(212, 209, 209);
  border-radius: 8px;
  width: 90%;

  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  background-color: #fff;
  z-index: 99;
}
.head{
  border-radius: 8px 8px 0px 0px;
  background: #9fd0cf;
  text-align:center;
  padding:5px;
  position: relative;
}
.head>text{
  width: 20px;
  position: absolute;
  right: 10px;

}
.cu-form-group{
  border-top: none;
}
input,textarea{
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
}
input{
  padding-bottom: 0.2rem;
  height: 1.7rem;
  border-bottom: 1px solid #f1f1f1;
  font-family:  -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.submit{
  background-color: #f25458;
  color: #fff;
}
.newPend{
  font-weight: bold;
  background-color: #F25458;
  border-radius: 10px;
  position: relative;
  left: 50%;transform: translateX(-50%);
  color: #fff;
  width: 90%;
  margin:10px 0 20px 0;
}
.newPend::before{
  content: '+ ';
  display: inline-block;
  color: #fff;

}
.newPend:active{
  background-color:rgb(243, 85, 90);
  
}
/* 表单 */
.new-form{
  position: fixed;
  width: 90%;
  min-height: 300rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.head{
  color: #fff;
  font-weight: bold;
}
.form-btn{
  width: 50%;
  height: 100%;
  background-color: #f25458;
  margin: 0 0 40rpx 0;
}
.form-btn:nth-child(2){
  background: #f1f1f1;
}