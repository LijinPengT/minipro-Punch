
button {
  margin-top: 40rpx;
  background-color: #F25458;
  box-shadow: 3px 3px 3px -3px rgb(223, 120, 120);
  border-radius: 8px;
  position: relative;
  color: #fff;
}

/* pages/punch/punch/punch.wxss */
.wrapper{
  padding: 20rpx  40rpx;
}
.card{
  border-radius: 8px;
  box-shadow: 3px 3px 3px -3px rgb(160, 158, 158);
  margin: 30rpx;
  background-color: #fff;
  padding: 30rpx;
  position: relative;
  min-height: 100rpx;
  font-weight: bolder;
  display: flex;
  font-family:  'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.punched{
  position: absolute;
  right: 20px;
}
/* 弹出框 */
.new{
  position: fixed;
  background-color: #fff;
  top: 10%;
  left: 50%;transform: translateX(-50%);
  border: 1px solid #000;
  border-radius: 8px;
  width: 90%;
  height: auto;
}
.head{
  text-align: center;
  padding: 10px;
  position: relative;
  color: #fff;
}
.head>image{
  position: absolute;
  top: 0;left: 0;
  z-index: -1;
  width: 100%;height: 100%;
}
textarea{
  width: 80%;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.submit{
  width: 40%;
  margin-bottom: 20px;
}
