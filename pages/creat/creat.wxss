/* pages/creat/creat.wxss */
page{
  position: relative;
  padding-top: 30px;
}
.wrapper{
  border-radius: 8px 8px 0px 0px;
}
image{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
input{
  border-bottom: 1px solid rgb(197, 192, 192);
  margin: 20px 0px;
  width: 90%;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}

.new{
  border: 1px solid rgb(212, 209, 209);
  border-radius: 8px;
  width: 90%;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  background-color: #fff;
  z-index: 99;
}
.head{
  padding: 20px 0px;
  color: #fff;
  border-radius: 8px 8px 0px 0px;
  text-align:center;
  position: relative;
}
.head>text{
  width: 20px;
  position: absolute;
  right: 10px;

}
.cu-form-group{
  border-top: none;
}
input,textarea{
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;

}
input{
  border-bottom: 1px solid #f1f1f1;
}
button{
  background-color: #F25458;
  width: 40%;
  border-radius: 8px;
  position: relative;
  left: 50%;transform: translateX(-50%);
  color: #fff;
}
button:active{
  background-color:rgb(243, 85, 90);
  
}